<div class="classDiv">
    <button class="button" onclick="openForm()"><span>Add Savings</span></button>
    <div class="form-popup" id="myForm">
        <form action="#" class="form-container">
            <label for="amount" class="labelfont"><b>Enter your Savings amount</b></label>
            <input type="text" placeholder="Amount" name="amount" required>
            <button type="submit" class="btn">Save</button>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>
    <button class="button" onclick="openForm2()"><span>Emergency Removal</span></button>
    <div class="form-popup" id="myForm2">
        <form action="#" class="form-container">
            <label for="amount" class="labelfont"><b>Enter amount to be removed</b></label>
            <input type="text" placeholder="Amount" name="amount" required>
            <button type="submit" class="btn">Remove</button>
            <button type="button" class="btn cancel" onclick="closeForm2()">Close</button>
        </form>
    </div>
    <script>
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }
        function openForm2() {
            document.getElementById("myForm2").style.display = "block";
        }

        function closeForm2() {
            document.getElementById("myForm2").style.display = "none";
        }
    </script>
</div>
